[Unit]
Description=Oracle REST Data Services
After=network.target

[Service]
Type=simple
Environment=JAVA_HOME=/usr/lib/jvm/jre-{{ java_version }}
ExecStart=/usr/bin/java -jar {{ ords_install_dir }}/ords.war standalone --config {{ ords_config_dir }}
User=root
Group=root
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target